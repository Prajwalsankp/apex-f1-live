<script>
    const carData = {
        "2004": { name: "FERRARI F2004", hp: "900 HP", weight: "605 KG", engine: "3.0L V10", aero: "Complex Winglets" },
        "2014": { name: "MERCEDES W05", hp: "850 HP", weight: "691 KG", engine: "1.6L V6 Hybrid", aero: "Low Drag" },
        "2024": { name: "RED BULL RB20", hp: "1050 HP", weight: "798 KG", engine: "1.6L V6 Turbo", aero: "Ground Effect" }
    };

    function updateComparison() {
        const idA = document.getElementById('carA').value;
        const idB = document.getElementById('carB').value;
        const dataA = carData[idA];
        const dataB = carData[idB];

        // Update Names
        document.getElementById('nameA').innerText = dataA.name;
        document.getElementById('nameB').innerText = dataB.name;

        // Render Stats
        document.getElementById('statsA').innerHTML = renderStats(dataA, 'end');
        document.getElementById('statsB').innerHTML = renderStats(dataB, 'start');
    }

    function renderStats(data, align) {
        return `
            <div class="mb-4 text-${align}">
                <small class="text-muted text-uppercase tracking-widest">Horsepower</small>
                <div class="display-6 text-white font-heading">${data.hp}</div>
            </div>
            <div class="mb-4 text-${align}">
                <small class="text-muted text-uppercase tracking-widest">Min Weight</small>
                <div class="display-6 text-white font-heading">${data.weight}</div>
            </div>
            <div class="mb-4 text-${align}">
                <small class="text-muted text-uppercase tracking-widest">Engine Config</small>
                <div class="fs-4 text-white font-body">${data.engine}</div>
            </div>
            <div class="mb-4 text-${align}">
                <small class="text-muted text-uppercase tracking-widest">Aero Concept</small>
                <div class="fs-4 text-white font-body">${data.aero}</div>
            </div>
        `;
    }

    // Init
    document.addEventListener("DOMContentLoaded", updateComparison);
</script>

