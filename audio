<script>
    function playSound(name) {
        // NOTE: You need to add .mp3 files to static/audio/ folder!
        // Example: static/audio/v10.mp3
        const path = `/static/audio/${name}.mp3`;
        const audio = new Audio(path);
        
        audio.play().catch(e => {
            alert("Audio file not found! Please add " + name + ".mp3 to static/audio/");
        });

        // Simple Visualizer Animation
        const vis = document.getElementById('visualizer');
        vis.style.opacity = '1';
        vis.classList.add('animate-pulse');
        
        audio.onended = () => {
            vis.style.opacity = '0';
            vis.classList.remove('animate-pulse');
        };
    }
    
    document.addEventListener("DOMContentLoaded", () => {
        if(window.lucide) window.lucide.createIcons();
    });
</script>

