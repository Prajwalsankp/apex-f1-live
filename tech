    <div class="card bg-black border-secondary shadow-lg p-4">
        
        <div class="row mb-5 align-items-center">
            <div class="col-md-5">
                <select id="carA" class="form-select bg-dark text-white border-secondary font-heading" onchange="updateComparison()">
                    <option value="2004">FERRARI F2004 (V10 Era)</option>
                    <option value="2014">MERCEDES W05 (Early Hybrid)</option>
                    <option value="2024" selected>RED BULL RB20 (Ground Effect)</option>
                </select>
            </div>
            <div class="col-md-2 text-center">
                <h3 class="font-heading text-danger">VS</h3>
            </div>
            <div class="col-md-5">
                <select id="carB" class="form-select bg-dark text-white border-secondary font-heading" onchange="updateComparison()">
                    <option value="2004" selected>FERRARI F2004 (V10 Era)</option>
                    <option value="2014">MERCEDES W05 (Early Hybrid)</option>
                    <option value="2024">RED BULL RB20 (Ground Effect)</option>
                </select>
            </div>
        </div>

        <div class="row g-0 border border-secondary bg-dark bg-opacity-25 position-relative">
            <div class="position-absolute w-100 h-100" style="background-image: linear-gradient(#333 1px, transparent 1px), linear-gradient(90deg, #333 1px, transparent 1px); background-size: 20px 20px; opacity: 0.2; z-index: 0;"></div>

            <div class="col-6 border-end border-secondary p-4 position-relative z-index-10">
                <h2 class="text-info font-heading mb-4 text-end" id="nameA">RED BULL RB20</h2>
                <div id="statsA">
                    </div>
            </div>

            <div class="col-6 p-4 position-relative z-index-10">
                <h2 class="text-warning font-heading mb-4 text-start" id="nameB">FERRARI F2004</h2>
                <div id="statsB">
                    </div>
            </div>
        </div>

    </div>
