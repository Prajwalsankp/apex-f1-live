<style>
    .light {
        width: 40px; 
        height: 40px; 
        border-radius: 50%; 
        background: #222; 
        border: 2px solid #333;
        transition: all 0.1s;
    }
    .light.on { background: #ff0000; box-shadow: 0 0 15px #ff0000; border-color: #ff0000; }
    .border-neon { border: 1px solid rgba(255,255,255,0.1); box-shadow: 0 0 20px rgba(0,0,0,0.5); }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const btn = document.getElementById('action-btn');
        const status = document.getElementById('status-text');
        const timer = document.getElementById('timer-text');
        const lights = [];
        
        // Collect lights
        for(let i=0; i<5; i++) lights.push(document.querySelectorAll(`[id^='light-${i}']`));

        let state = 'idle';
        let startTime = 0;
        let timeouts = [];

        function reset() {
            lights.forEach(col => col.forEach(l => l.classList.remove('on')));
        }

        btn.addEventListener('click', () => {
            if (state === 'idle') {
                state = 'waiting';
                btn.textContent = "WAIT...";
                btn.classList.add('disabled');
                status.textContent = "Lights sequence started...";
                reset();

                let delay = 1000;
                for(let i=0; i<5; i++) {
                    timeouts.push(setTimeout(() => {
                        lights[i].forEach(l => l.classList.add('on'));
                    }, delay));
                    delay += 1000;
                }

                let randomDetails = delay + Math.random() * 3000;
                timeouts.push(setTimeout(() => {
                    reset(); // LIGHTS OUT
                    startTime = Date.now();
                    state = 'ready';
                    btn.textContent = "CLICK NOW!";
                    btn.classList.remove('disabled');
                    btn.classList.replace('btn-primary', 'btn-danger');
                }, randomDetails));

            } else if (state === 'waiting') {
                // JUMP START
                timeouts.forEach(clearTimeout);
                reset();
                state = 'idle';
                status.textContent = "JUMP START! Too early.";
                btn.textContent = "TRY AGAIN";
                btn.classList.remove('disabled');
            } else if (state === 'ready') {
                // SUCCESS
                const time = (Date.now() - startTime) / 1000;
                state = 'idle';
                timer.textContent = time.toFixed(3) + "s";
                
                if(time < 0.25) status.textContent = "F1 LEVEL REACTION!";
                else status.textContent = "Good, but not F1 yet.";

                const currentBest = document.getElementById('best-score').textContent;
                if(currentBest === '--' || time < parseFloat(currentBest)) {
                    document.getElementById('best-score').textContent = time.toFixed(3) + "s";
                }

                btn.textContent = "RESTART";
                btn.classList.replace('btn-danger', 'btn-primary');
            }
        });
    });
</script>

